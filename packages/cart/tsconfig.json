{
  "extends": "@dry/configs-ts-react",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    },
    "declarationDir": "types"
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "**/*.stories.tsx"
  ]
}
