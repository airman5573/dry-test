{
  "extends": "@dry/configs-ts-react",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    },
    "declarationDir": "types",
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
